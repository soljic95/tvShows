<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:padding="16dp"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Season"
            android:layout_width="wrap_content"
            android:textColor="@color/buttonEnabledPink"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/npSeason"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.523"
            app:layout_constraintStart_toStartOf="@+id/npSeason" app:layout_constraintEnd_toEndOf="@+id/npSeason"
            android:id="@+id/textView2"/>

    <TextView
            android:text="Episode"
            android:layout_width="wrap_content"
            android:textColor="@color/buttonEnabledPink"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/npEpisode" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/npEpisode" app:layout_constraintStart_toStartOf="@+id/npEpisode"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.216"/>

    <NumberPicker
            android:id="@+id/npSeason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <NumberPicker
            android:id="@+id/npEpisode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/npSeason"
            app:layout_constraintBottom_toBottomOf="@+id/npSeason"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/npSeason" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/tvBtnSave"
            android:layout_width="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/buttonEnabledPink"
            android:text="@string/save" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/npEpisode"
            android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>