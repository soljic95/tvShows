<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:foreground="?attr/selectableItemBackground"
                                                   android:id="@+id/tvShowsItemLayoutContainer"
                                                   android:layout_height="100dp">

    <ImageView
            android:id="@+id/tvShowImage"
            android:layout_width="60dp"
            android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tvShowsName"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="The Office"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/tvShowImage"
            app:layout_constraintStart_toEndOf="@+id/tvShowImage"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.015"/>

    <TextView
            android:id="@+id/tvShowsAirDate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="(2005 -2014)"
            app:layout_constraintStart_toEndOf="@+id/tvShowImage" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvShowsName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>